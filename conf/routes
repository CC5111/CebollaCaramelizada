# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

GET     /series/:id                  controllers.SeriesController.show(id: Long)

GET     /series/:idSeries/season/:idSeason              controllers.SeasonController.show(idSeries: Long, idSeason: Long)

GET     /update-series      controllers.ActorController.updateSeries()

GET     /series/list/             controllers.ListController.show()

GET     /downloads/socket           controllers.DownloadsController.socket

GET     /downloads                  controllers.DownloadsController.show

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
