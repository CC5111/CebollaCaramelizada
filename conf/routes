# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET        /                                                controllers.HomeController.index

GET        /remove/:id                                      controllers.HomeController.remove(id: Long)

GET        /series/:id                                      controllers.SeriesController.show(id: Long)

GET        /seasons/check/:id/:seriesId                     controllers.SeriesController.check(id: Long, seriesId : Long)

GET        /seasons/uncheck/:id/:seriesId                   controllers.SeriesController.uncheck(id: Long, seriesId : Long)

GET        /episodes/check/:id/:seriesId/:seasonId          controllers.SeasonController.check(id: Long,seriesId:Long,seasonId:Long)

GET        /episodes/uncheck/:id/:seriesId/:seasonId        controllers.SeasonController.uncheck(id: Long,seriesId:Long,seasonId:Long)

GET        /check/:id                                       controllers.HomeController.check(id: Long)

GET        /uncheck/:id                                     controllers.HomeController.uncheck(id: Long)

GET        /series/:idSeries/season/:idSeason               controllers.SeasonController.show(idSeries: Long, idSeason: Long)


GET        /update-series                                   controllers.ActorController.updateSeries()

GET        /search                                          controllers.ListController.show()

GET        /add/:idSeries                                   controllers.ListController.add(idSeries: Long)

GET        /json/:idSeries                                  controllers.ListController.json(idSeries: Long)


GET     /downloads/socket           controllers.DownloadsController.socket

GET     /downloads                  controllers.DownloadsController.show

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                                    controllers.Assets.versioned(path="/public", file: Asset)

